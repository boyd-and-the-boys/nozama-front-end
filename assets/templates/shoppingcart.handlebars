  {{#each selectedProducts}}
    <div class="selected-product" data-id={{_id}}>
      <div class="selected-product-name spformat">
        {{_product.name}}
      </div>
      <div class="selected-product-quantity spformat">
        {{quantity}}
        <!-- <input type="text" name="selectedProduct[quantity]" placeholder="quantity"> -->
      </div>
      <div class="selected-product-size spformat">
        {{size}}
        <!-- <input type="text" name="selectedProduct[size]" placeholder="quantity"> -->
      </div>
      <div class="selected-product-price spformat" value={{_product.price}}>${{_product.price}}</div>
    </div>
  {{/each}}
  <h4>Total Price: ${{totalPrice}}</h4>

  
