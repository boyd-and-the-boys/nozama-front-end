{{#each products}}
  <span class="product" data-id={{_id}}>

    <div class="image-placeholder"></div>
    <div>{{_id}}</div>
    <!-- <img src={{photo}} alt="trip photo"/> -->
    <p class="product-name">{{name}}</p>
    <p class="product-price">${{price}}</p>
    <form class="select-product-form">
      <fieldset>
        <input type="text" name="selectedProduct[quantity]" placeholder="quantity">
        <input type="text" name="selectedProduct[size]" placeholder="size">
        <input type="submit" name="submit" value="Submit">
      </fieldset>
    </form>
  </span>
{{/each}}
